<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags for character encoding and viewport settings -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Page title -->
    <title>Login Page</title>
    <!-- Link to external CSS -->
    <link rel="stylesheet" href="../css/styles.css">
    <!-- Inline styles for specific elements -->
    <style>
        .foot{
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            height: 30px;
        }
        .form-group{
            size-adjust: fit;
        }
        .login-container{
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav" style="background-color: #53d5e6;">
        <div class="container-fluid p-0" style="background-color: #53d5e6; margin-left: 10px; margin-right: 10px;">
            <!-- Logo and Brand Name -->
            <a class="navbar-brand" href="#page-top">
                <img src="/assets/403Logo.webp" alt="..." style="height: 80px; width: auto; margin-right: 10px;"/>  
                Splish Splash Baby Bash
            </a>
            <!-- Toggler/collapsible Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation" style="color: #b2ebf2;">
                Menu
                <i class="fas fa-bars ml-1"></i>
            </button>
            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/displayMileStone">Milestone Tracker</a></li>
                    <li class="nav-item"><a class="nav-link" href="/loginpage">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Banner Section -->
    <div class="banner">
        <h1>Splish-Splash Baby Bash</h1>
    </div>
    
    <!-- Spacer -->
    <br><br><br><br>
    <!-- Login Container -->
    <div class="login-container">
        <h2>Login to create a splash!</h2>
        <!-- Error Message Display -->
        <div class="error-message">
            <% if (typeof error !== 'undefined') { %>
            <p style="color: red; text-align: center;"><%= error %></p>
            <% } %>
        </div>
        <!-- Login Form -->
        <form action="/login" method="POST">
            <div class="form-group">
                <!-- Username Input -->
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" style="width: 180px" required>
            </div>
            <div class="form-group">
                <!-- Password Input -->
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" style="width: 180px"  required>
            </div>
            <!-- Submit Button -->
            <button class="sign-up-button"  type="submit">Login</button>
        </form>
        <!-- Sign Up Link -->
        <p>Don't have an account? Sign up <a href="/signUp">here</a></p>
    </div>
    <!-- Footer -->
    <footer class="footer py-4 foot" style="background-color: #303030;">
        <div class="row align-items-center">
            <div class="col-lg-4 text-lg-start ms-3 text-white" style="padding-bottom: 15px;">
                &copy; Splish Splash Baby Bash 2024
            </div>
        </div>
    </footer>
    <!-- Bootstrap core JS -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Core theme JS -->
    <script src="../../backend/scripts.js"></script>
</body>
</html>