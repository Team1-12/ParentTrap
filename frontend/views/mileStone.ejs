<!-- Form Section -->
    <section style="padding-top: 80px;">
      <div class="container">
      <div class="login-container">
        <h1>Milestone Form</h1>
        <form id="MileStoneForm" method="post" action="/submitMileStoneForm">

          <div class="form-group">
            <label for="milestoneOptions">Select Milestone *</label>
            <select name="MilestoneOptions" id="milestoneOptions" required>
              <option value="">Please Select an Option</option>
              <option value="firstPositiveTest">First Positive Pregnancy Test</option>
              <option value="firstDoctorVisit">First Doctor’s Appointment</option>
              <option value="firstUltrasound">First Ultrasound</option>
              <option value="hearHeartbeat">Hearing Baby’s Heartbeat</option>
              <option value="genderReveal">Finding Out Baby's Gender</option>
              <option value="firstFetalMovement">First Fetal Movement</option>
              <option value="babyShower">Baby Shower</option>
              <option value="thirdTrimesterStart">Third Trimester Start</option>
              <option value="packingForHospital">Packing for Hospital</option>
              <option value="dueDate">Due Date</option>
              <option value="firstContractions">First Contractions or Labor Signs</option>
              <option value="babyBirth">Baby’s Birth</option>
              <option value="postpartumCheckup">Postpartum Check-Up</option>
            </select>
            <span class="error-message">This field is required.</span>
          </div>
    
          <div class="form-group">
            <label for="trimester">Trimester *</label>
            <select name="Trimester" id="trimester" required>
              <option value="">Please Select an Option</option>
              <option value="firstTrimester">First Trimester</option>
              <option value="secondTrimester">Second Trimester</option>
              <option value="thirdTrimester">Third Trimester</option>
            </select>
            <span class="error-message">This field is required.</span>
          </div>
    
          <div class="form-group">
            <label for="milestoneDate">Date of Milestone *</label>
            <input type="date" id="milestoneDate" name="MilestoneDate" required />
          </div>
    
          <div class="form-group">
            <label for="milestoneNotes">Journaling</label>
            <textarea id="milestoneNotes" name="MilestoneNotes" placeholder="Record the excitement, fun, and emotion of the milestone!" rows="5"></textarea>
          </div>
    
            <button class="btn btn-primary btn-md text-uppercase" type="submit" >Submit Information</button>             
        </form>
      </div>
    </div>
